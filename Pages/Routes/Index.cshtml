@page
@model AndenSemesterProjekt.Pages.Routes.IndexModel
@{
    ViewData["Title"] = "Routes";
}

<h1>Routes</h1>
<p>
    <a asp-page="CreateRoutes">Create New Route</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Routes_ID
            </th>
            <th>
                DriverID
            </th>
            <th>
                Attendants
            </th>
            <th>
                NrOfSeats
            </th>
            <th>
                StartAdress
            </th>
            <th>
                EndAdress
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Routes)
        {
            <tr>
                <td>
                    @r.RouteId
                </td>
                <td>
                    @r.DriverId
                </td>
                <td>
                    @r.AttendantId
                </td>
                <td>
                    @r.NrOfSeats
                </td>
                <td>
                    @r.StartAdress
                </td>
                <td>
                    @r.EndAdress
                </td>
                <td>
                    @r.Eta
                </td>


                @*<td>
                    <img src="Image/@r.ImageName" width="120" />
                </td>*@

                <td>
                    <p>
                        <a asp-page="EditRoutes" asp-route-id="@r.RouteId" class="btn btn-primary m-1">Edit</a> |
                        <a asp-page="/Routes/DeleteRoutes" asp-route-id="@r.RouteId" class="btn btn-primary m-1">Delete</a>
                        <a asp-page="/Routes/AddAttendentToRoute" asp-route-id="@r.RouteId" class="btn btn-primary" m1>Join</a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>