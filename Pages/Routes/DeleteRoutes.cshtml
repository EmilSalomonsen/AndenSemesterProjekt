@page
@model AndenSemesterProjekt.Pages.Routes.DeleteRoutesModel
@{
    ViewData["title"] = "DeleteRoute";
}

<h1>Slet ruten</h1>
<h3>Er du sikker på du vil slette denne rute</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.ID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.DriverID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.DriverID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.NrOfSeats)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.NrOfSeats)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.StartAdress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.StartAdress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.EndAdress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.EndAdress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.StartTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.ArivalTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.ArivalTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.Route.PickupPointID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Route.PickupPointID)
            </dd>
        </dl>
        <input type="submit" valute="Delete" class="btn btn-dager"/>
    </form>
    <div>
        <a asp-page="Routes">Tilbage til Router</a>
    </div>
</div>